						<id>testResourcesCopy</id>
						<phase>test-compile</phase>
						<configuration>
							<tasks>
								<copy
									file="${basedir}/src/test/java/org/pentaho/pat/server/services/impl/SampleData.mondrian.xml"
									toFile="${basedir}/target/test-classes/org/pentaho/pat/server/services/impl/SampleData.mondrian.xml" />
								<copy
									file="${basedir}/src/test/java/org/pentaho/pat/server/services/impl/sampledata.sql"
									toFile="${basedir}/target/test-classes/org/pentaho/pat/server/services/impl/sampledata.sql" />
								<copy
									file="${basedir}/src/test/java/org/pentaho/pat/server/services/impl/test.properties.xml"
									toFile="${basedir}/target/test-classes/org/pentaho/pat/server/services/impl/test.properties.xml" />
								<copy
									file="${basedir}/src/test/java/org/pentaho/pat/server/services/impl/SampleData.mondrian.xml"
									toFile="${basedir}/target/test-classes/org/pentaho/pat/server/util/SampleData.mondrian.xml" />
