									toFile="${basedir}/target/tomcat/webapps/ROOT/WEB-INF/lib/mysql-connector-java-5.1.6.jar" />
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
