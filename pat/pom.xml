									toFile="${basedir}/target/test-classes/org/pentaho/pat/server/data/impl/applicationContextOverrides.xml" />
								<copy
									file="${basedir}/src/test/java/org/pentaho/pat/server/services/impl/pat-insert.sql"
									toFile="${basedir}/target/test-classes/org/pentaho/pat/server/services/impl/pat-insert.sql" />
								<copy
