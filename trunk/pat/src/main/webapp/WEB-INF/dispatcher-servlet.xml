<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean id="httpInvokerDiscoveryServlet"
		class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
		<property name="service" ref="discoveryServlet" />
		<property name="serviceInterface" value="org.pentaho.pat.rpc.Discovery" />
	</bean>

	<bean id="httpInvokerSessionServlet"
		class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
		<property name="service" ref="sessionServlet" />
		<property name="serviceInterface" value="org.pentaho.pat.rpc.Session" />
	</bean>

	<bean id="httpInvokerQueryServlet"
		class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
		<property name="service" ref="queryServlet" />
		<property name="serviceInterface" value="org.pentaho.pat.rpc.Query" />
	</bean>
	
	<bean id="fileUploadController"
		class="org.pentaho.pat.server.servlet.FileUploadController">
		<property name="basedir" value="/schema_temp/" />
	</bean>

	<bean id="httpInvokerLegacyServlet"
		class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
		<property name="service" ref="legacyServlet" />
		<property name="serviceInterface"
			value="org.pentaho.pat.client.services.Olap4JService" />
	</bean>

	<bean id="urlMapping"
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<props>
				<prop key="/schemaupload">fileUploadController</prop>
				<prop key="/discovery.rpc">httpInvokerDiscoveryServlet</prop>
				<prop key="/session.rpc">httpInvokerSessionServlet</prop>
				<prop key="/query.rpc">httpInvokerQueryServlet</prop>
			</props>
		</property>
	</bean>

</beans>
